root = true  # .editorconfigを/まで検索

[*]
charset = utf-8
end_of_line = lf                 # lf / cr / crlf
indent_style = space             # space / tab
indent_size = 2
trim_trailing_whitespace = true  # 行末の空白削除
#insert_final_newline = true      # 最終行の空白
insert_final_newline = false     # 最終行の空白
#tab_width = 2                   # 省略時、indent_size

[Makefile]
indent_size = 4
indent_style = tab

[*.{md,markdown}]
insert_final_newline = false
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false
