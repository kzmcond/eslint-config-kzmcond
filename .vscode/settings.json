  //"workbench.colorCustomizations": {
  //    "statusBar.background": "#BF616A",
  //    "statusBar.noFolderBackground": "#BF616A",
  //    "statusBar.debuggingBackground": "#BF616A"
  //},
  "better-comments.tags": [
    // デフォルト値は省略
    {
      "tag": "CUSTOMIZE",
      "color": "#8bffff",
      "strikethrough": false,
      "backgroundColor": "transparent"
    }
  ],
  // Highlight Matching Tag
  "editor.occurrencesHighlight": false,
  "autoprefixer.browsers": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "ie 8",
    "ie 9"
  ],
  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.CustomBrowser": "chrome",
  // Trailing Spaces
  "files.trimTrailingWhitespace": true,
  "workbench.startupEditor": "newUntitledFile",
  "editor.renderWhitespace": "all",
  "editor.fontFamily": "'Fira Code', 'Ricty Diminished', 'Fira Sans', '01FLOPDESIN', 'Cascadia Code PL', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "go.useLanguageServer": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.tabSize": 2,
     "editor.defaultFormatter": "esbenp.prettier-vscode"
//    "editor.defaultFormatter": "HookyQR.beautify"
  },

