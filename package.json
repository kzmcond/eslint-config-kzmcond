{
  "name": "eslint-config-kzmcond",
  "version": "0.1.0",
  "main": "dist/index.js",
  "author": "Kazumi Cond <kzmcond@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.11.10",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "browser-sync": "^2.26.13",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-group-css-media-queries": "^1.2.2",
    "gulp-mode": "^1.0.2",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-pug": "^4.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pug": "^3.0.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "dev:watch": "ts-node-dev --respawn src/index.ts",
    "clean": "rimraf dist/*",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "start": "node .",
    "check-types": "tsc --noEmit",
    "eslint": "eslint src/**/*.{js,ts}",
    "eslint:fix": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint": "npm-run-all eslint check-types",
    "lint:fix": "npm-run-all eslint:fix check-types format",
    "sass": "node-sass src/sass/ --output dist/css/ --output-style compressed --watch --source-map true",
    "dev:sass": "node-sass src/sass/ --o dist/css/ --output-style expanded --w --source-map true --recursive",
    "gulp": "npx gulp",
    "gulp:default": "npm run gulp",
    "gulp:copy": "npm run gulp copy",
    "gulp:cp": "npm run gulp cp",
    "gulp:watch": "npm run gulp watch",
    "gulp:start": "gulp",
    "gulp:build": "npm gulp --production",
    "pug": "npx gulp pugCompile",
    "pug:dev": "npx gulp pugWatch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.ts": "tsc --noEmit",
    "*.{js,ts,json}": "prettier --write"
  }
}
